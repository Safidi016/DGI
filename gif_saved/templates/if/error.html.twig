{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --dgi-red: #e30613;
            --dgi-blue: #0055a5;
            --dgi-light-gray: #f5f5f5;
            --dgi-dark-gray: #333333;
        }
        
        .error-container {
            max-width: 600px;
            margin: 3rem auto;
            padding: 2.5rem;
            border-radius: 8px;
            background: white;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            text-align: center;
            border-top: 4px solid var(--dgi-red);
        }
        
        .logo-container {
            margin-bottom: 1.5rem;
        }
        
        .logo-img {
            height: 100px;
            margin-bottom: 1rem;
        }
        
        .error-icon {
            font-size: 3.5rem;
            color: var(--dgi-red);
            margin: 1rem 0;
        }
        
        .error-title {
            color: var(--dgi-red);
            font-weight: 700;
            margin: 1.5rem 0 1rem;
            font-size: 1.8rem;
        }
        
        .error-message {
            font-size: 1.1rem;
            color: var(--dgi-dark-gray);
            margin: 1.5rem 0;
            line-height: 1.6;
            padding: 0 1rem;
        }
        
        .btn-retour {
            background: var(--dgi-blue);
            color: white;
            padding: 0.8rem 2.5rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            transition: all 0.2s ease;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 1rem;
            border: 2px solid var(--dgi-blue);
        }
        
        .btn-retour:hover {
            background: white;
            color: var(--dgi-blue);
            transform: translateY(-1px);
            box-shadow: 0 2px 10px rgba(0, 85, 165, 0.2);
        }
        
        .contact-support {
            margin-top: 2rem;
            font-size: 0.95rem;
            color: #666;
        }
        
        .debug-info {
            margin-top: 2.5rem;
            padding: 1rem;
            background: var(--dgi-light-gray);
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            text-align: left;
            color: #555;
            font-size: 0.85rem;
            border-left: 3px solid #ccc;
        }
        
        @media (max-width: 768px) {
            .error-container {
                margin: 1.5rem;
                padding: 1.8rem;
            }
            
            .logo-img {
                height: 80px;
            }
            
            .error-title {
                font-size: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="error-container">
    <div class="logo-container">
        <img src="{{ asset('images/logoDgi.png') }}" alt="Direction Générale des Impôts Madagascar" class="logo-img">
    </div>
    
    <div class="error-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </svg>
    </div>
    
    <h1 class="error-title">Erreur de vérification</h1>
    
    <p class="error-message">
        {{ error_message }}<br>
        La vérification automatique de votre avis d'imposition n'a pas abouti.
    </p>
    
    <a href="{{ path('avis_if_index') }}" class="btn-retour">
        Vérifier manuellement mon avis
    </a>
    
    <div class="contact-support">
        <p>Pour toute assistance, veuillez contacter :<br>
        <strong>support.impots@dgi.mg</strong> ou <strong>+261 20 22 222 22</strong></p>
    </div>
    
    {% if app.environment == 'dev' and technical_details is defined %}
        <div class="debug-info">
            <h4>Détails techniques :</h4>
            <pre>{{ technical_details }}</pre>
        </div>
    {% endif %}
</div>
{% endblock %}