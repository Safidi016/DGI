{% extends 'base.html.twig' %}

{% block title %}DGI - Madagascar{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: rgb(168, 216, 221);
            --secondary-color: #f8f9fa;
            --accent-color: #198754;
            --error-color: #dc3545;
            --text-color: #495057;
            --light-gray: #e9ecef;
        }
        
        body {
            background-color: var(--primary-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
        }
        
        .page-container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 2rem;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        
        .header-container {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .logo-img {
            height: 120px;
        }
        
        .page-title {
            color: var(--primary-color);
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .result-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .result-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1.5rem;
        }
        
        .result-title {
            margin: 0;
            font-weight: 600;
            display: flex;
            align-items: center;
        }
        
        .result-title i {
            margin-right: 0.75rem;
        }
        
        .result-body {
            padding: 2rem;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        
        .info-item {
            background-color: var(--secondary-color);
            border-radius: 8px;
            padding: 1.25rem;
        }
        
        .info-label {
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }
        
        .info-value {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 1.1rem;
        }
        
        .amount {
            color: var(--accent-color);
            font-weight: 700;
            font-size: 1.25rem;
        }
        
        @media (max-width: 767.98px) {
            .page-container {
                padding: 1rem;
            }
            
            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-container">
   <div class="header-container">
    <div class="logo-container">
        <img src="{{ asset('images/logoDgi.png') }}" alt="Logo DGI" class="logo-img" style="height: 120px;"> <!-- Logo agrandi à 120px -->
    </div>
    <h1 class="page-title" style="font-size: 1.8rem;">Détails de l'avis d'Imposition IF</h1> <!-- Titre réduit et simplifié -->
    </div>
    
    {% for item in donnees %}
    <div class="result-card ">
        <div class="result-header">
            <h3 class="result-title">
                <i class="fas fa-file-invoice me-2"></i>
                Avis n° {{ item.num_avis }} - {{ item.annee }}
            </h3>
        </div>
        <div class="result-body">
            <div class="mb-4">
                <h4 class="mb-3"><i class="fas fa-user me-2"></i> Informations du contribuable</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Nom</div>
                        <div class="info-value">{{ item.nom }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Adresse</div>
                        <div class="info-value">{{ item.adresse }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">CIN</div>
                        <div class="info-value">{{ item.cin }}</div>
                    </div>
                </div>
            </div>
            
            <div class="mb-4">
                <h4 class="mb-3"><i class="fas fa-money-bill-wave me-2"></i> Détails fiscaux</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Montant à payer</div>
                        <div class="info-value amount">{{ item.montant }} MGA</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Année fiscale</div>
                        <div class="info-value">{{ item.annee }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Numéro impôt</div>
                        <div class="info-value">{{ item.numimpot }}</div>
                    </div>
                </div>
            </div>
            
            <div>
                <h4 class="mb-3"><i class="fas fa-home me-2"></i> Informations du bien</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Adresse du bien</div>
                        <div class="info-value">{{ item.adresse_bien }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Commune</div>
                        <div class="info-value">{{ item.commune }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Centre fiscal</div>
                        <div class="info-value">{{ item.centrefiscal }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
     <div class="d-flex justify-content-center mt-4">
      
      <div class="navigation-buttons">
               
        <a href="{{ path('avis_if_index') }}" class="btn btn-custom btn-custom-primary">
            <i class="fas fa-search me-2"></i> Consulter d'autre avis d'imposition
        </a>
    </div>
    </div>
    
</div>
{% endblock %}