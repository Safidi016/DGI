{% extends 'base.html.twig' %}

{% block title %}DGI - Madagascar{% endblock %}

{% block stylesheets %}
    {{ parent() }}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
         :root {
            --primary-color:  rgb(168, 216, 221);
            --secondary-color: #f8f9fa;
            --accent-color: #198754;
            --error-color: #dc3545;
            --text-color: #495057;
            --light-gray: #e9ecef;
            --custom-bg: rgb(168, 216, 221); /* Nouvelle couleur de fond */
        }
        
     
        body {
            background-color:var(--primary-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
        
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url('https://www.impots.mg/wp-content/uploads/2020/06/logo-dgi.png');
            background-repeat: no-repeat;
            background-position: center;
            background-size: 30%;
            opacity: 0.05;
            z-index: -1;
            pointer-events: none;
        }
        
        /* Style pour le header avec logo */
        .header-container {
            text-align: center;
            margin-bottom: 1.5rem; /* Espacement réduit entre logo et titre */
            padding-top: 1rem;
        }
        
        .logo-container {
            margin-bottom: 0.5rem; /* Espacement réduit sous le logo */
        }
        
        .logo-img {
            height: 80px; /* Taille du logo ajustée */
        }
        
         .page-container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 2rem;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            min-height: calc(100vh - 40px);
        }
        
        .page-title {
            text-align: center;
            margin-bottom: 2rem;
            color: var(--primary-color);
            font-weight: 700;
            position: relative;
            padding-bottom: 1rem;
        }
        
        .page-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: var(--primary-color);
            border-radius: 2px;
        }
        
        .search-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 2.5rem;
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .search-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }
        
        .form-control-lg {
            padding: 1rem 1.25rem;
            border-radius: 8px;
            border: 2px solid var(--light-gray);
            transition: all 0.3s;
            height: 58px;
        }
        
        .form-control-lg:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(42, 100, 150, 0.25);
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            border-radius: 8px;
            padding: 1rem 1.5rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            height: 58px;
        }
        
        .btn-primary:hover {
            background-color: #1d4f7a;
            transform: translateY(-2px);
        }
        
        .btn-primary:active {
            transform: translateY(0);
        }
        
        /* Nouveau style pour le bouton recherche */
        .btn-recherche {
            background-color: rgb(168, 216, 221);
            border: none;
            border-radius: 8px;
            padding: 1rem 1.5rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            height: 58px;
            color: #495057;
        }
        
        .btn-recherche:hover {
            background-color: rgb(140, 200, 205);
            transform: translateY(-2px);
            color: white;
        }
        
        .result-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            border: none;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .result-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }
        
        .result-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1.5rem;
            border-bottom: 4px solid rgba(255, 255, 255, 0.1);
        }
        
        .result-title {
            margin: 0;
            font-weight: 600;
            display: flex;
            align-items: center;
        }
        
        .result-title i {
            margin-right: 0.75rem;
            font-size: 1.5rem;
        }
        
        .result-body {
            padding: 2rem;
        }
        
        .info-section {
            margin-bottom: 1.5rem;
        }
        
        .section-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            border-bottom: 2px solid var(--light-gray);
            padding-bottom: 0.5rem;
        }
        
        .section-title i {
            margin-right: 0.75rem;
            color: var(--primary-color);
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        
        .info-item {
            background-color: var(--secondary-color);
            border-radius: 8px;
            padding: 1.25rem;
            transition: transform 0.3s;
        }
        
        .info-item:hover {
            transform: translateY(-3px);
        }
        
        .info-label {
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }
        
        .info-value {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 1.1rem;
            margin: 0;
        }
        
        .amount {
            color: var(--accent-color);
            font-weight: 700;
            font-size: 1.25rem;
        }
        
        .no-results {
            text-align: center;
            padding: 3rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .no-results i {
            font-size: 3.5rem;
            color: var(--light-gray);
            margin-bottom: 1.5rem;
        }
        
        .no-results h4 {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1rem;
        }
        
        .no-results p {
            color: var(--text-color);
            font-size: 1.1rem;
        }
        
        /* Validation styles */
        .is-invalid {
            border-color: var(--error-color) !important;
        }
        
        .is-valid {
            border-color: var(--accent-color) !important;
        }
        
        .invalid-feedback {
            color: var(--error-color);
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }
        
        .char-counter {
            font-size: 0.85rem;
            text-align: right;
            margin-top: 0.5rem;
            color: #6c757d;
        }
        
        .char-counter.invalid {
            color: var(--error-color);
            font-weight: bold;
        }
        
        /* Loading spinner */
        #loadingSpinner {
            display: none;
            margin-left: 0.75rem;
        }
        
        /* reCAPTCHA styles */
        .g-recaptcha {
            margin: 1.5rem 0;
        }
        
        .recaptcha-error {
            color: var(--error-color);
            font-size: 0.9rem;
            margin-top: 0.5rem;
            display: none;
        }
        
        /* Mobile adjustments */
        @media (max-width: 767.98px) {
            body::before {
                background-size: 60%;
            }
            
            .header-container {
                margin-bottom: 1rem;
            }
            
            .logo-img {
                height: 60px;
            }
            
            .page-container {
                padding: 0.5rem 1rem 1rem;
                margin-top: 0.5rem;
                margin-bottom: 1rem;
            }
            
            .page-title {
                margin-bottom: 1.5rem;
                font-size: 1.5rem;
                padding-bottom: 0.75rem;
            }
            
            .page-title:after {
                width: 80px;
                height: 3px;
            }
            
            .search-card {
                padding: 1.5rem;
                margin-bottom: 1.5rem;
            }
            
            .form-control-lg, .btn-primary, .btn-recherche {
                height: auto;
                padding: 0.8rem 1rem;
            }
            
            .g-recaptcha {
                transform: scale(0.85);
                transform-origin: left top;
                margin: 1rem 0;
            }
            
            .result-header {
                padding: 1rem;
            }
            
            .result-title {
                font-size: 1rem;
            }
            
            .result-title i {
                font-size: 1.2rem;
                margin-right: 0.5rem;
            }
            
            .result-body {
                padding: 1rem;
            }
            
            .info-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .info-item {
                padding: 1rem;
            }
            
            .section-title {
                font-size: 0.95rem;
                margin-bottom: 0.75rem;
                padding-bottom: 0.3rem;
            }
            
            .section-title i {
                font-size: 0.9rem;
                margin-right: 0.5rem;
            }
            
            .info-label {
                font-size: 0.8rem;
                margin-bottom: 0.3rem;
            }
            
            .info-value {
                font-size: 0.95rem;
            }
            
            .amount {
                font-size: 1.05rem;
            }
            
            .no-results {
                padding: 2rem 1rem;
            }
            
            .no-results i {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }
            
            .no-results h4 {
                font-size: 1.1rem;
                margin-bottom: 0.75rem;
            }
            
            .no-results p {
                font-size: 0.9rem;
            }
            
            .invalid-feedback {
                font-size: 0.8rem;
                margin-top: 0.3rem;
            }
            
            .char-counter {
                font-size: 0.8rem;
                margin-top: 0.3rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-container back">
   <div class="header-container">
    <div class="logo-container">
        <img src="{{ asset('images/logoDgi.png') }}" alt="Logo DGI" class="logo-img" style="height: 120px;"> <!-- Logo agrandi à 120px -->
    </div>
    <h1 class="page-title" style="font-size: 1.8rem;">Consultation d'avis d'Imposition IF</h1> <!-- Titre réduit et simplifié -->
    </div>
    
    <div class="search-card">
        <form id="searchForm" class="row g-3 align-items-end">
            <div class="col-md-8">
                <div class="form-group mb-0">
                    <label for="num_avis" class="form-label fw-bold">Numéro d'avis (11 caractères)</label>
                    <div class="input-group">
                        <input type="text" 
                               class="form-control form-control-lg" 
                               id="num_avis" 
                               name="num_avis" 
                               placeholder="Ex: GFRY9DJ44D4" 
                               maxlength="11"
                               pattern=".{11}"
                               title="Le numéro d'avis doit contenir exactement 11 caractères"
                               required>
                    </div>
                    <div class="invalid-feedback">
                        Le numéro d'avis doit contenir exactement 11 caractères
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-recherche btn-lg w-100">
                    <i class="fas fa-search me-2"></i>Rechercher
                    <span id="loadingSpinner" class="spinner-border spinner-border-sm"></span>
                </button>
            </div>
            <div class="char-counter col-md-8"><span id="charCount">0</span>/11 caractères</div>
            
            <!-- reCAPTCHA Widget -->
            <div class="col-12">
                <div class="g-recaptcha" data-sitekey="6Ld2440rAAAAAEbzNrWS9ZQC0NQ1GIj-wEnnv8_h"></div>
                <div class="recaptcha-error" id="recaptchaError"></div>
            </div>
        </form>
    </div>

    <div id="resultsContainer">
        <div class="no-results">
            <i class="fas fa-search"></i>
            <h4>Consultation d'avis IF</h4>
            <p>Veuillez entrer un numéro d'avis de 11 caractères</p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    
    <script>
    $(document).ready(function() {
        const $numAvisInput = $('#num_avis');
        const $charCount = $('#charCount');
        const $charCounter = $('.char-counter');
        const $form = $('#searchForm');
        const $submitBtn = $form.find('button[type="submit"]');
        const $recaptchaError = $('#recaptchaError');
        
        // Fonction de vérification reCAPTCHA
        function verifyRecaptcha() {
            const response = grecaptcha.getResponse();
            if (response.length === 0) {
                $recaptchaError.text('Veuillez valider le reCAPTCHA').show();
                return false;
            }
            $recaptchaError.hide();
            return true;
        }
        
        // Initialisation reCAPTCHA
        window.onRecaptchaLoad = function() {
            grecaptcha.ready(function() {
                // Prêt à utiliser reCAPTCHA
            });
        };
        
        // Validation en temps réel
        $numAvisInput.on('input', function() {
            const value = $(this).val().trim();
            const length = value.length;
            
            $charCount.text(length);
            
            if (length === 11) {
                $(this).removeClass('is-invalid').addClass('is-valid');
                $charCounter.removeClass('invalid');
                $(this).closest('.form-group').find('.invalid-feedback').hide();
            } else if (length > 0) {
                $(this).removeClass('is-valid').addClass('is-invalid');
                $charCounter.addClass('invalid');
            } else {
                $(this).removeClass('is-valid is-invalid');
                $charCounter.removeClass('invalid');
            }
        });
        
        // Soumission du formulaire
        $form.on('submit', function(e) {
            e.preventDefault();
            
            const numAvis = $numAvisInput.val().trim();
            const $feedback = $numAvisInput.closest('.form-group').find('.invalid-feedback');
            
            // Validation du numéro d'avis
            if (numAvis.length !== 11) {
                $numAvisInput.addClass('is-invalid');
                $feedback.show();
                $charCounter.addClass('invalid');
                return;
            }
            
            // Validation reCAPTCHA
            if (!verifyRecaptcha()) {
                return;
            }
            
            // Si validation OK
            $numAvisInput.removeClass('is-invalid').addClass('is-valid');
            $feedback.hide();
            $charCounter.removeClass('invalid');

            const $spinner = $('#loadingSpinner');
            
            $submitBtn.prop('disabled', true);
            $spinner.show();

            // Récupération de la réponse reCAPTCHA
            const recaptchaResponse = grecaptcha.getResponse();
            
            $.ajax({
                url: "{{ path('avis_if_search') }}",
                type: "POST",
                data: {
                    num_avis: numAvis,
                    'g-recaptcha-response': recaptchaResponse
                },
                dataType: 'json',
                success: function(response) {
                    if (response.status === 'success') {
                        displayResults(response.data);
                    } else {
                        showError(response.message || 'Une erreur est survenue');
                        // Réinitialiser reCAPTCHA en cas d'erreur
                        grecaptcha.reset();
                    }
                },
                error: function(xhr) {
                    let errorMsg = 'Erreur de connexion au serveur';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }
                    showError(errorMsg);
                    grecaptcha.reset();
                },
                complete: function() {
                    $submitBtn.prop('disabled', false);
                    $spinner.hide();
                }
            });
        });

        function displayResults(data) {
            const $container = $('#resultsContainer');
            
            if (data.length === 0) {
                $container.html(`
                    <div class="no-results">
                        <i class="fas fa-exclamation-circle" style="color: #dc3545;"></i>
                        <h4>Aucun résultat trouvé</h4>
                        <p>Aucun avis correspondant à votre recherche</p>
                    </div>
                `);
                return;
            }

            let html = '';
            
            data.forEach((item, index) => {
                html += `
                    <div class="result-card">
                        <div class="result-header">
                            <h4 class="result-title">
                                <i class="fas fa-file-invoice"></i>
                                Avis d'imposition n° ${item.num_avis || 'N/A'} - ${item.annee || 'N/A'}
                            </h4>
                        </div>
                        <div class="result-body">
                            <div class="info-section">
                                <h5 class="section-title"><i class="fas fa-user"></i> Contribuable</h5>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-label">Nom</div>
                                        <div class="info-value">${item.nom || 'Non disponible'}</div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-label">Adresse</div>
                                        <div class="info-value">${item.adresse || 'Non disponible'}</div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-label">CIN pour immatriculation</div>
                                        <div class="info-value">${item.cin || 'Non disponible'}</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="info-section">
                                <h5 class="section-title"><i class="fas fa-money-bill-wave"></i> Fiscalité</h5>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-label">Montant à payer</div>
                                        <div class="info-value amount">${item.montant ? item.montant + ' MGA' : 'Non disponible'}</div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-label">Année fiscale</div>
                                        <div class="info-value">${item.annee || 'Non disponible'}</div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-label">Num Impot (IFT:91,IFPB:92)</div>
                                        <div class="info-value">${item.numimpot || 'Non disponible'}</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="info-section">
                                <h5 class="section-title"><i class="fas fa-home"></i> Bien imposable</h5>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <div class="info-label">Adresse du bien</div>
                                        <div class="info-value">${item.adresse_bien || 'Non disponible'}</div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-label">Commune</div>
                                        <div class="info-value">${item.commune || 'Non disponible'}</div>
                                    </div>
                                    <div class="info-item">
                                        <div class="info-label">Code centre gestionnaire</div>
                                        <div class="info-value">${item.centrefiscal || 'Non disponible'}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });

            $container.html(html);
        }

        function showError(message) {
            $('#resultsContainer').html(`
                <div class="no-results">
                    <i class="fas fa-exclamation-circle" style="color: #dc3545;"></i>
                    <h4>Erreur de recherche</h4>
                    <p>${message || 'Impossible de charger les résultats'}</p>
                </div>
            `);
        }
    });
    </script>
{% endblock %}